<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Title: ", input_html: { class: "string" }, wrapper: false, label_html: { class:"label" }, placeholder: "Enter a title" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body, label: "Tell your secret: ", input_html: { class: "textarea has-fixed-size" }, wrapper: false, label_html: { class:"label" }, placeholder: "Enter story" %>
    </div>
  </div>

  <%= f.submit "Post the secret", class: "button is-primary"%>
<% end %>
