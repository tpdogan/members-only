<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Log In</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                      required: true,
                      wrapper: false,
                      input_html: { class: "input" },
                      input_label: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password,
                      required: true,
                      wrapper: false,
                      input_html: { class: "input" },
                      input_label: { class: "label" },
                      autocomplete: "current-password" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
          
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log In", class: "button is-primary is-medium" %>
            </div>
          </div>
          
        <% end %>
        <br />
        
        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</section>

